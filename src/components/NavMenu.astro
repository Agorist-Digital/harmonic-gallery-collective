---
import MdKeyboardArrowRight from 'svelte-icons/md/MdKeyboardArrowRight.svelte'
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.replaceAll("/", ""); 

console.log("/" + currentPath)
---

<label for="side-menu" class="hamb">
    <span class="hamb-line"></span>
</label>

<header class="header shadow">
    <a class="logo" href="/">
        <img class="logo" src="/logo.png" />
    </a>
    <nav class="nav">
        <ul class="nav">
            {["Artists", "News", "Contact"].map((link) => (
            <li class="nav">
                <a class="nav" href={currentPath == link.toLocaleLowerCase() ? undefined : link.toLocaleLowerCase()}>
                    <div class={`icon dark ${currentPath == link.toLocaleLowerCase() ? "" : "hidden"}`}>
                        <MdKeyboardArrowRight client:load />
                    </div>
                    {link}
                </a>
            </li>
            ))}
        </ul>
    </nav>
    <input type="checkbox" id="menu" />
    <nav class="vert shadow-lg">
        <ul class="vert">
            <li class="vert">
                <div class={`icon ${currentPath == "" ? "" : "hidden"}`}>
                    <MdKeyboardArrowRight client:load />
                </div>
                <a class="vert" href={currentPath == "" ? undefined : "/"}>Home</a>
            </li>
            {["Artists", "News", "Contact"].map((link) => (
            <li class="vert">
                <div class={`icon ${currentPath == link.toLocaleLowerCase() ? "" : "hidden"}`}>
                    <MdKeyboardArrowRight client:load />
                </div>
                <a 
                    class="vert"
                    href={currentPath == link.toLocaleLowerCase() ? undefined : ("/" + link.toLocaleLowerCase())}>{link}</a>
            </li>
            ))}
        </ul>
    </nav>
</header>

<style>
    .hidden {
        visibility: hidden;
        display: none;
    }
    .icon {
        color: #FCF2EE;
        height: 1.6rem;
        width: 1.6rem;
        margin-bottom: -3px;
        margin-right: -3px;
    }

    .dark {
        color: #201335;
    }

    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    a.nav {
        text-decoration: none;
        user-select: none;
        background:
            linear-gradient(
            to right,
            rgba(237, 33, 134, 0),
            rgba(237, 33, 134, 0)
            ),
            linear-gradient(
            to right,
            rgba(255, 0, 0, 1),
            rgba(255, 0, 180, 1),
            rgba(0, 100, 200, 1)
        );
        background-size: 100% 3px, 0px 3px;
        background-position: 100% 100%, 0 100%;
        background-repeat: no-repeat;
        transition: background-size 400ms;
        padding-bottom: 2px;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    a.nav:hover {
        background-size: 0 3px, 100% 3px;
    }

    .logo {
        height: 3.2rem;
        justify-self: flex-start !important;
    }

    a {
        text-decoration: none;
        z-index: 3;
        width: max-content;
        position: relative;
    }

    ul {
        list-style: none;
    }

    nav.nav {
        flex-direction: row;
        width: min-content;
        height: 4rem;
        align-items: center;
        display: none;
        position: relative;
        visibility: hidden;
        justify-content: space-evenly;
        justify-self: center;
        margin-left: 0;
    }

    .lean {
        display: none;
        visibility: hidden;
    }

    @media only screen and (min-width: 700px) {
        nav.nav {
            display: flex;
            visibility: visible;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }
        input#menu {
            visibility: hidden;
            display: none;
            width: 0;
            height: 0;
        }
        .lean {
            display: block;
            visibility: visible;
            height: 0;
            width: 0;
            justify-self: flex-end;
        }
        .header {
            justify-content: none !important;
        }
        nav.vert {
            transform: translateX(100%) !important;
            transition: transform 0.6s ease-in-out;
        }
    }

    ul.nav{
        font-size: 1.2rem;
    }

    li {
        margin-inline: 1rem;
        font: "roboto";
    }

    li.nav {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: min-content;
    }

    ul.nav {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        font-weight: bold;
        color: #201335;
        width: max-content;
    }

    .header {
        background-color: #FCF2EE;
        position: fixed;
        top: 0;
        width: 100vw;
        height: 4rem;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding-inline: 2rem;
        z-index: 4;
    }

    nav {
        width: 100vw;
        height: 100vh;
        position: fixed;
    }

    input#menu {
        --s: 0.5rem; /* control the size */

        border: none;
        background: none;
        padding: 0;
        margin: calc(2 * var(--s)) 0;
        cursor: pointer;
        height: var(--s);
        aspect-ratio: 5/1;
        border-radius: 100px;
        display: inline-block;
        position: relative;
        transition: 0.5s;
        box-shadow: 
            0 calc(2 * var(--s)) 0 #201335, 
            0 calc(-2 * var(--s)) 0 #201335;
        -webkit-appearance:none;
        -moz-appearance:none;
        appearance:none;
    }
        
    input#menu:before,
    input#menu:after {
        content: "";
        position: absolute;
        inset: calc(-2 * var(--s)) 0;
        transition: 0.4s;
        background: 
            radial-gradient(farthest-side, #201335 98%, #20133500) 0 / var(--s) var(--s) repeat-x,
            linear-gradient(#201335 0 0) 50% / calc(100% - var(--s)) var(--s) no-repeat;
    }

    input#menu:focus-visible {
        outline: none;
    }

    input#menu:focus-visible::before {
        outline: 1px solid;
        outline-offset: 5px;
    }

    input#menu:hover {
        box-shadow: 
            0 calc(1.6 * var(--s)) 0 #201335, 
            0 calc(-1.6 * var(--s)) 0 #201335;
    }

    input#menu:checked {
        box-shadow: 
            0 calc(6 * var(--s)) 0 #20133500, 
            0 calc(-6 * var(--s)) 0 #20133500;
    }

    input#menu:checked::before,
    input#menu:checked::after {
        transform: rotate(45deg);
        transition: 0.6s 0.1s;
    }

    input#menu:checked::after {
        transform: rotate(-45deg);
    }

    input#menu:checked ~ nav.vert {
        display: flex;
        visibility: visible;
        opacity: 1;
        transform: translateX(-100%);
        transition: transform 0.6s ease-in-out;
        transform: none;
    }

    nav.vert {
        transition: transform 0.6s ease-in-out;
        transform: translateX(100%);
        position: fixed;
        top: 4rem;
        right: 0;
        height: calc(100vh - 4rem);
        width: max-content;
        min-width: 50%;
        background-color: #201335;
        color: #FCF2EE;
        z-index: 3;
    }

    ul.vert {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        margin-top: 1rem;
        margin-inline: 1.5rem;
    }

    li.vert {
        margin-top: 1rem;
        margin-bottom: 1rem;
        font-size: 1.6rem;
        font-weight: bold;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    li.nav:hover, li.nav a:hover, li.nav icon:hover {
        cursor: pointer !important;
    }

    @keyframes fade-in {
        0% {
            visibility: hidden;
            display: none;
            opacity: 0;
        }
        100% {
            visibility: visible;
            display: flex;
            opacity: 1;
        }
    }
</style>